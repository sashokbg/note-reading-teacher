<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/button_settings"
            android:src="@drawable/settings_icon"
            android:background="@color/colorPrimary"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:scaleType="centerCrop"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/settings"
            android:layout_marginTop="-25dp"
            android:onClick="startGameInG" />

        <ImageButton
            android:id="@+id/button_profile"
            android:src="@drawable/profile_icon"
            android:background="@color/colorPrimary"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:scaleType="centerCrop"

            android:onClick="startGameInG"
            android:contentDescription="@string/profile"
            android:layout_marginTop="-25dp"
            android:layout_toStartOf="@+id/button_settings" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button_profile"
            android:textAlignment="center"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:text="MIDI Note Teacher"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/button_main3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:onClick="startGameInG"
            android:text="Play Key of F"/>

        <Button
            android:id="@+id/button_main4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startGameInG"
            android:layout_toStartOf="@+id/button_main3"
            android:text="Play Key of G"/>

    </RelativeLayout>

</LinearLayout>